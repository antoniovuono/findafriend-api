generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserType {
  ORGANIZATION
  NORMAL
}

model User {
  id          String   @id @default(uuid())
  name        String
  email       String   @unique
  password    String
  whatsapp    String   @unique
  user_type   UserType @default(NORMAL)
  address     String?
  city        String?
  postal_code String?
  created_at  DateTime @default(now())
  Pet         Pet[]

  @@map("users")
}

model Pet {
  id          String @id @default(uuid())
  surname     String
  color       String
  city        String
  age         String
  description String

  user    User   @relation(fields: [user_id], references: [id])
  user_id String

  @@map("pets")
}
